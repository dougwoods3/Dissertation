%==============================%
%      Set Horizontal Spacing for Lists       %
%==============================%
\setlength\parindent{0pt} %this sets the indent on new lines to zero. 
\setlength\leftmargini{0pt} % this sets the horizontal spacing on LEVEL 1 lists to be 0pts.
\setlength\leftmarginii{10pt} % this sets the horizontal spacing on LEVEL 2 lists to be 10pts.
\setlength\leftmarginiii{10pt} % this sets the horizontal spacing on LEVEL 3 lists to be 20 pts.

\newlength{\lineh}
\setlength{\lineh}{0.01\paperheight}


%===============================%
%             Declare Pictures/Logos               %
%===============================%
\pgfdeclareimage[width=13.35in,height=1.25in]{OSUTitleHeader}{osu_img/title_orange_2017} % the orange bar
\pgfdeclareimage[width=1.1in,height=0.348in]{OSU_Logo}{osu_img/title_osu_logo_2017} % the osu logo on the title page
\pgfdeclareimage[width=2.0033in,height=0.17in]{OSU_NSE_Logo}{osu_img/title_orange_dept_large_2017} % the NSE header on title page
\pgfdeclareimage[width=0.75in]{RTRP_Logo}{osu_img/RTRP}
\pgfdeclareimage[width=70pt]{OSU_Logo2}{./osu_img/OSU_horizontal_2C_O_over_B}
\logo{\raisebox{-50pt}{\pgfuseimage{OSU_Logo2}}}

%==============================%
%             Define Useable colors               %
%==============================%
\definecolor{osudarkblue}{RGB}{0,59,92}  % "Star Canvas"
\definecolor{osuorange}{RGB}{220,68,5}   %"Beaver Orange"
\definecolor{osugray}{RGB}{142,144,137} % "Crater"
\definecolor{osublack}{RGB}{0,0,0}            % "Paddletail Black" 
\setbeamercolor{structure}{fg=osublack}

\setbeamercolor{osuorangebox}{parent=structure,fg=osuorange,bg=white}
\setbeamercolor{osudarkbluebox}{parent=structure,fg=osudarkblue,bg=white}
\setbeamercolor{osublackbox}{parent=structure,fg=black,bg=white}
\setbeamercolor{frametitle}{parent=structure,fg=osublack}

\setbeamercolor{section in head/foot}{parent=structure,fg=osublack}
\setbeamercolor{title page}{parent=structure,fg=osudarkblue}

\setbeamertemplate{frametitle}[default][left]
\addtobeamertemplate{frametitle}{\vskip3pt\bfseries} %adjusts vertical distance between header and frametitle of each slide and makes bold

\AtBeginDocument{{\usebeamercolor{section in head/foot}}}

\beamertemplatedotitem

\setbeamercovered{transparent}
\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{part page}[default][colsep=-4bp,rounded=true,shadow=true]

\setbeamerfont{date}{size=\scriptsize}
\setbeamercolor{date}{fg=black}

\setbeamerfont{author}{size=\footnotesize,series=\bfseries}
\setbeamercolor{author}{fg=black}

\setbeamerfont{institute}{size=\tiny}
\setbeamercolor{institute}{fg=osublack}

\setbeamerfont{conference}{size=\tiny}
\setbeamercolor{conference}{fg=osublack}

\setbeamerfont{authortitle}{size=\small}
\setbeamercolor{authortitle}{fg=osublack}

\setbeamerfont{subtitle}{series=\bfseries,size=\small}
\setbeamercolor{subtitle}{fg=osudarkblue,bg=white}

\setbeamerfont{acknowledgment}{size=\footnotesize}
\setbeamercolor{acknowledgment}{fg=black,bg=white}

\setbeamerfont{docnumber}{size=\footnotesize}
\setbeamercolor{docnumber}{fg=black,bg=white}

\setbeamerfont{docnumbertitle}{size=\tiny}
\setbeamercolor{docnumbertitle}{fg=black,bg=white}

\setbeamerfont{OSUTitle}{series=\bfseries,parent=title,shape=\itshape,size=\Large}
\setbeamercolor{OSUTitle}{parent=title,fg=osuorange,bg=white}

\def\docnumber{\setbeamertemplate{docnumber}}
\def\insertdocnumber{\usebeamertemplate*{docnumber}}
\def\acknowledgment{\setbeamertemplate{acknowledgment}}
\def\insertacknowledgment{\usebeamertemplate*{acknowledgment}}
\def\address{\setbeamertemplate{address}}
\def\insertaddress{\usebeamertemplate*{address}}
\def\authortitle{\setbeamertemplate{authortitle}}
\def\insertauthortitle{\usebeamertemplate*{authortitle}}
\def\conference{\setbeamertemplate{conference}}
\def\insertconference{\usebeamertemplate*{conference}}


%==============================%
%               Adjusts Title Page                    %
%==============================%
\setbeamertemplate{title page}{
\begin{picture}(0,0)
\put(-32,-30){\pgfuseimage{OSUTitleHeader}} % the orange box
\put(-1,-25)  {\pgfuseimage{OSU_Logo}} % the OSU logo in the upper left on title page
\put(170,-18) {\pgfuseimage{OSU_NSE_Logo}} % the NSE header
\put(-10,-260) {\pgfuseimage{RTRP_Logo}} % research group logo!
\end{picture}
\vskip85pt % adjusts the vertical distance from the top header 

\begin{beamercolorbox}[wd=0.9\paperwidth,center]{osuorangebox}
\usebeamerfont{OSUTitle}\inserttitle\par
\end{beamercolorbox}

\begin{beamercolorbox}[wd=0.9\paperwidth,center]{osudarkbluebox}
\vskip6pt
\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle%
\end{beamercolorbox}

\begin{beamercolorbox}[wd=0.9\paperwidth,center]{osudarkbluebox}
\vskip6pt
\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor%
\ifbeamertemplateempty{authortitle}{}{, \insertauthortitle}%
\end{beamercolorbox}

\begin{beamercolorbox}[wd=0.9\paperwidth,center]{osublackbox}%
\vskip6pt
\usebeamerfont{date} \insertdate \\[6pt]
\usebeamerfont{institute} \insertinstitute
\end{beamercolorbox}

\begin{beamercolorbox}[wd=0.9\paperwidth,center]{osublackbox}%
\vskip6pt
\usebeamerfont{conference} \insertconference
\end{beamercolorbox}

\begin{beamercolorbox}[ht=10pt,wd=0.85\paperwidth]{osublackbox}
{\usebeamerfont{acknowledgment}\usebeamercolor{acknowledgment}\insertacknowledgment\par}
{\usebeamerfont{docnumbertitle}\usebeamercolor{osuwhitebox}\usebeamertemplate{docnumber}\par}
\end{beamercolorbox}%

}

%==============================%
%               Adjusts Content Slides            %
%==============================%
%The bottom of this box is the top of the footline.  So if you want the logo down
%further, you need a negative vskip at the end of it.
\setbeamertemplate{sidebar right}
{
\vfill% shift logo and numbering to the bottom of the footline.
\llap{\insertlogo\hskip0.45cm}%controls horizontal spacing of OSU logo on lower RHS
\llap{\insertframenumber/\inserttotalframenumber\hskip12.0cm}% controls horizontal spacing of page number from lower RHS (larger # shifts it left)
\vskip10pt
}



